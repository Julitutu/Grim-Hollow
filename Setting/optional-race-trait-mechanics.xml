    <element name="Dwarf, LV03: Dwarven Blackpowder Training" type="Item" source="Grim Hollow - Campaing Guide" id="ID_GFG_GHCG_ITEM_VM_DWARVEN_BLACKPOWDER_TRAINING">
		<compendium display="false" />
		<description>
			<p><i>You can equip this item to “enable” it. It remains hidden from the inventory on your character sheet.</i></p>
			<p>You have proficiency with Blackpowder weapons when you reach 
			3rd-level.</p>
		</description>
		<setters>
			<set name="category">Optional Race Trait</set>
			<set name="keywords">third level, 3rd level, Proficiency</set>
			<set name="slot">misc</set>
			<set name="inventory-hidden">true</set>
		</setters>
		<rules>
			<grant type="Proficiency" id="ID_PROFICIENCY_WEAPON_PROFICIENCY_BLACKPOWDER_WEAPONS"  level="3" requirements="ID_SRD_RACE_DWARF"/>
		</rules>
	</element>
     <element name="Gnome, LV03: Gnome specialist training" type="Item" source="Grim Hollow - Campaing Guide" id="ID_GFG_GHCG_ITEM_VM_DWARVEN_BLACKPOWDER_TRAINING">
